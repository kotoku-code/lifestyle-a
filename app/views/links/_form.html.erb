<div class="section">
 <div class = "container">
    <div class = "columns is-centered">
      <div class = "column is_4">
          <h1>New Book</h1>
          <%= simple_form_for(@link) do |f| %>
            <div class="form-inputs ">

              <%= f.input :title %>
              <%= f.input :url %>
              <%= f.input :description %>
            </div>

            
       <div class="form-group row">    
             <%= f.label :group %>      
                <div class="col-lg-9 col-sm-12">    
                    <%= f.collection_select(:group_ids, Group.all, :id, :name, { prompt: "Make your selection from the list below (can't be empty)"}, { multiple: true, size: 3, class: "custom-select shadow rounded" }) %>          
                </div>          
       </div>

            <div class="form-actions">
              <%= f.button :submit,class: "submit" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
</div>