<div class="nav">
    <h3 class="text-dark center-nav"> <%= @group.name %></h3>
</div>

<div class="card">
  <div class="card-horizontal">
    <div class="card-body">
      <h4 class="card-title text-muted">This group has <%= pluralize(@group.links.count, "link") %>: </h4>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-12 mt-3">
			<% @links.each do |link|%>
        <div class="card mb-3">
          <div class="card-horizontal">
            <div class="card-body">
              <h4 class="card-title"> <%= link_to link.title, link_path(link), class:"text-decoration-none text-muted" %></h4>
            </div>
          </div>
          <div class="card-footer">
            <small class="text-muted">Created <%= time_ago_in_words(link.created_at)%> ago </small>
          </div>
        </div>
			<% end %>
		</div>
  </div>
  
    <%= link_to 'Add new link', new_link_path, class: "p-1 text-muted submit" %>

</div>